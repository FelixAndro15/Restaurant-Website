@model List<ResultFoodDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td><a href="/AdminFood/DeleteFood/@item.FoodID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminFood/UpdateFood/@item.FoodID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/AdminFood/AddFood/" class="btn btn-info">Yeni Menü Girişi</a>

